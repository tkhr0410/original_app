<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit "投稿", class: "btn btn-lg btn-primary" %>
<% end %>